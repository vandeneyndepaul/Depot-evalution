{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}





<div class="container centre">
    <div class="row">
        <div class="col mb-3">
            <h6>Modification de la livraison pour la commande :<h1>{{app.user.firstname}} {{app.user.lastname}}</h1></h6>
        </div>
    </div>

    {{ form_start(form) }} 
    <fieldset class="mb-3 mt-3">
    <legend class="mb-3"> Mon identité</legend> 
        {{ form_row(form.lastname) }}
        {{ form_row(form.firstname) }}

    </fieldset>

    <fieldset class="mb-3">
    <legend> Mes coordonnées</legend>
        {{ form_row(form.adress) }}
        {{ form_row(form.zipcode) }}
        {{ form_row(form.city) }}
    </fieldset>


        <button type="submit" class="btn btn-primary btn my-3">Valider</button>
    {{ form_end(form) }}
    
</div>
{% endblock %}
